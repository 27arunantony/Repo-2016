mins0 <- apply(logitML[,c(18:29,31)], 2, min)
scaled <- as.data.frame(scale(logitML[,c(18:29,31)],center = mins, scale = maxs0 - mins0))

c0_recomend = as.numeric(logitML$c0_recomend)
data = cbind(c0_recomend,scaled)

library(caTools)
